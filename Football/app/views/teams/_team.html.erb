
    <%= form_for @team do |f|%>
        <%= f.label :team_name %>
        <%= f.text_field :name %><br>

        <br>

        <%= f.fields_for :players do |addr| %>
            <%="New Player" %><br>
            <%= addr.label :player_name %>
            <%= addr.text_field :name %><br>
            <br>

            <%= addr.label :player_position %>
            <%= addr.text_field :position %><br>
            <br>
 
            <%= addr.label :starter %>
            <%= addr.check_box :starter %><br>

            <%= addr.label :player_fantasy_points %>
            <%= addr.number_field :fantasy_points %><br>
            <br>
        <% end %>

        <%= hidden_field_tag 'team[user_id]', params[:user_id] %>
        <%= hidden_field_tag 'team[league_id]', params[:league_id] %>

        <%=f.submit %>


    <%end%>



      