      </div>
    <% end %>

  
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :names %>
    </div>

    <div class="field">
        <%= f.label :cost %><br>
        <%= f.text_field :cost %>
    </div>
    
    <div class="field">
      <%= f.label :people_in_league %><br>
      <%= f.text_field :people_in_league %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>

    <%= hidden_field_tag 'league[user_id]', params[:user_id] %>
  <% end %>

